#!/usr/bin/env bash
################################################################################
# dotfiles
# Prepare Apple Mac with essentials
#
# Author:   Franky Martinez <frankymartz@gmail.com>
# Version:  0.1.0
################################################################################
set -e -u

# TimeStamp Everything!
date +"(%a) %b %d, %Y [%Z] %r"


#===============================================================================
# GLOBALS
#===============================================================================
readonly _PWD=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
readonly _BIN="${PWD}/bin"

# Import Tools -----------------------------------------------------------------
source ./src/utils.sh


#===============================================================================
# VERIFY USER ROOT PERMISSION.
#===============================================================================
#if [ "$EUID" -ne "0" ]; then
    #dLog "Must be run as root.${RED}"
    #exit 1
#fi


#===============================================================================
# VERIFY DIRECTORY STRUCTURE
#===============================================================================
cLog "==> Validating \"./bin\" Directory..."

[[ -d "$_BIN/python" ]] || mkdir -p "$_BIN/python"

cLog "==> Validate \"./bin\" Directory...DONE" 1


#===============================================================================
# INSTALLATION
#===============================================================================

# BASH -------------------------------------------------------------------------
source ./bash/install_bash.sh

# BASE -------------------------------------------------------------------------
source ./src/install_base.sh

# GIT --------------------------------------------------------------------------
source ./git/install_git.sh

# NEOVIM -----------------------------------------------------------------------
source ./nvim/install_neovim.sh

