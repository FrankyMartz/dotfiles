{
  "coc.preferences.formatOnType": true,
  "coc.preferences.extensionUpdateCheck": "never",

  "codeLens.enable": true,
  "codeLens.separator": " ",

  "suggest.enablePreview": true,
  "suggest.noselect": false,
  "suggest.preselect": true,
  "suggest.snippetIndicator": "  ",

  "diagnostic.enable": true,
  "diagnostic.displayByAle": true,
  "diagnostic.virtualText": true,

  "snippets.snippets.author": "Franky Martinez",
  "snippets.extends": {
    "javascriptreact": ["javascript", "html", "xml"],
    "typescriptreact": ["javascript", "html", "xml"],
    "typescript": ["javascript"]
  },
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips",
    "honza/vim-snippets",
    "epilande/vim-es2015-snippets",
    "epilande/vim-react-snippets",
    "mhartington/vim-angular2-snippets",
    "markwu/vim-laravel4-snippets"
  ],

  "tsserver.implicitProjectConfig.checkJs": true,
  "tsserver.implicitProjectConfig.experimentalDecorators": true,

  "typescript.suggest.autoImports": false,

  "javascript.suggest.autoImports": false,
  "javascript.suggest.enabled": false,
  "javascript.showUnused": true,

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": { "lsRanges" : true }
      }
    },
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      "filetypes": ["c", "cpp"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery",
        "highlight": { "enabled" : true },
        "emitInactiveRegions" : true
      }
    },
    "sql": {
      "command": "sql-language-server",
      "args" : ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
     }

  }
}
